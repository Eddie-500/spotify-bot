# Web server port (Render will inject PORT automatically; this is for local dev)
PORT=10000

# Public base URL of your web service (important for OAuth callback)
# e.g., https://your-service.onrender.com
BASE_URL=https://your-render-web-service.onrender.com

# Spotify app credentials (from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_client_id
SPOTIFY_CLIENT_SECRET=your_client_secret

# Must match a Redirect URI you add in your Spotify app settings
# e.g., https://your-render-web-service.onrender.com/callback
SPOTIFY_REDIRECT_URI=https://your-render-web-service.onrender.com/callback

# Optional: default target device ID (you can set/override in the UI)
PREFERRED_DEVICE_ID=

# How often (in seconds) the monitor loop checks playback state
MONITOR_INTERVAL=20
